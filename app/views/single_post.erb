<div class='container'>

  <h1>Viewing Single Post</h1>

  <h3><%= @post.title %></h3>
  <br>
  <p><%= @post.body %></p>

</div>
<div class='container'>

<h3>Comments</h3>
<p>
  <a href="/posts/<%=@post.id%>/comments/new">Post a comment!</a>
  <br>
  <br>
  <a href="/posts">Back to all posts!</a>
</p>

<ul>
  <% @comments.each do |comment| %>
    <li><%= comment.body %></li>
  <% end %>
</ul>
</div>

